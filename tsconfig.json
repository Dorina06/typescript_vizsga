{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
        "*": ["*"]
        },
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "lib": ["es2019", "dom"],
        "target": "ES6",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*",
        "tests/**/*"
    ]
}